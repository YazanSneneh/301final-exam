<!DOCTYPE html>
<html lang="en">

<%- include('layout/head') %>

    <body>
        <%- include('layout/header') %>
            <%- include('layout/navbar') %>
                <main class="white center">
                    <div class="container flex-container">
                        <% if(records.length> 0){%>
                            <% records.forEach( record=>{ %>
                                <article class="country-card">
                                    <figcaption>
                                        <h2 class="pink-font">Country : <%=record.country %>
                                        </h2>

                                        <h3> Date : <%=record.date %>
                                        </h3>
                                    </figcaption>
                                    <div class="card-button-container">
                                        <a href="/recordDetails/<%=record.id %>" +record.id>
                                            <button class="blue white-font"> view details</button>
                                        </a>
                                    </div>

                                </article>
                                <% })%>

                                    <%} else {%>
                                        <h1 class="pink-font big-heading">NO AVAILABLE RECORDS </h1>
                                        <%}%>
                    </div>
                </main>
                <%- include('layout/footer') %>
    </body>

</html>